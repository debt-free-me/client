{
  "pipeline": {
    "name": "{{prefix}}-pipeline",
    "roleArn": "arn:aws:iam::{{aws-account-id}}:role/{{prefix}}-codepipeline-role",
    "artifactStore": {
      "type": "S3",
      "location": "{{prefix}}-codepipeline-{{aws-account-id}}-{{aws-region}}-s3"
    },
    "stages": [
      {
        "name": "Source",
        "actions": [
          {
            "name": "Source",
            "actionTypeId": {
              "category": "Source",
              "owner": "ThirdParty",
              "provider": "GitHub",
              "version": "1"
            },
            "runOrder": 1,
            "configuration": {
              "Owner": "{{github-repo-owner}}",
              "Repo": "{{github-repo-name}}",
              "Branch": "{{github-repo-branch}}",
              "OAuthToken": "{{github-oauth-token}}",
              "PollForSourceChanges": "false"
            },
            "outputArtifacts": [
              {
                "name": "SourceArtifact"
              }
            ],
            "inputArtifacts": [],
            "region": "{{aws-region}}"
          }
        ]
      },
      {
        "name": "Build",
        "actions": [
          {
            "name": "Build",
            "actionTypeId": {
              "category": "Build",
              "owner": "AWS",
              "provider": "CodeBuild",
              "version": "1"
            },
            "runOrder": 1,
            "configuration": {
              "ProjectName": "{{prefix}}-build"
            },
            "outputArtifacts": [
              {
                "name": "BuildArtifact"
              }
            ],
            "inputArtifacts": [
              {
                "name": "SourceArtifact"
              }
            ],
            "region": "{{aws-region}}"
          }
        ]
      }
    ],
    "version": 2
  }
}