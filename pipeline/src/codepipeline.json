{
  "pipeline": {
    "name": "debtfreemeclient-pipeline",
    "roleArn": "arn:aws:iam::{{aws-account-id}}:role/debtfreemeclient-codepipeline-role",
    "artifactStore": {
      "type": "S3",
      "location": "debtfreemeclient-codepipeline-{{aws-region}}-bucket"
    },
    "stages": [
      {
        "name": "Source",
        "actions": [
          {
            "name": "Source",
            "actionTypeId": {
              "category": "Source",
              "owner": "ThirdParty",
              "provider": "GitHub",
              "version": "1"
            },
            "runOrder": 1,
            "configuration": {
              "Branch": "master",
              "OAuthToken": "{{github-oauth-token}}",
              "Owner": "debt-free-me",
              "PollForSourceChanges": "false",
              "Repo": "client"
            },
            "outputArtifacts": [
              {
                "name": "SourceArtifact"
              }
            ],
            "inputArtifacts": [],
            "region": "{{aws-region}}"
          }
        ]
      },
      {
        "name": "Build",
        "actions": [
          {
            "name": "Build",
            "actionTypeId": {
              "category": "Build",
              "owner": "AWS",
              "provider": "CodeBuild",
              "version": "1"
            },
            "runOrder": 1,
            "configuration": {
              "ProjectName": "debtfreemeclient-build"
            },
            "outputArtifacts": [
              {
                "name": "BuildArtifact"
              }
            ],
            "inputArtifacts": [
              {
                "name": "SourceArtifact"
              }
            ],
            "region": "{{aws-region}}"
          }
        ]
      }
    ],
    "version": 2
  }
}